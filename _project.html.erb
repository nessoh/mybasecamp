<div class="card mb-3">
  <div class="card-body">
    <div class="project-box">
      <div class="card-header bg-dark text-white">
        <div class="d-flex align-items-center">
          <h5 class="card-title"><%= project.name %></h5>
          <%= link_to edit_project_path(project), class: "text-white ml-auto" do %>
            <%= content_tag(:i, '', class: 'fas fa-cog settings-icon') %>
          <% end %>
        </div>
        <div class="d-flex align-items-center">
        <a href="#" class="pencil-icon text-white"><i class="fas fa-pencil-alt mr-2"></i></a>
           <p class="card-text mr-2"><%= project.user.email %></p>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= project.description %></p>
      </div>
      <div class="card-footer bg-grey">
        <div class="d-flex align-items-center">
          <a href="#" class="users-icon" style="color: #000;"><i class="fas fa-users"></i></a>
          <a href="#" class="chat-icon mx-2" style="color: #000;"><i class="fas fa-comments"></i></a>
          <div class="ml-auto">
            <%= button_to content_tag(:i, '', class: 'fas fa-trash'), project, method: :delete, class: "btn btn-unstyled text-white bg-danger p-1 rounded" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
